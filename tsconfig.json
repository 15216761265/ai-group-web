{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,

    "baseUrl": "src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@recoil/*": ["recoil/*"],
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@typings/*": ["typings/*"],
      "@apis/*": ["apis/*"],
      "@modals/*": ["modals/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "exclude": ["server"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
